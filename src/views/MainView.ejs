<!DOCTYPE html>
<html>
  <head>
    <title>FindMyFriend</title>
    <link rel="icon" href="/images/DogAndCat.jpeg" />
    <!-- link css files here -->
    <link rel="stylesheet" href="/css/MainView.css" type="text/css" />
    <link rel="stylesheet" href="/css/colors.css" type="text/css" />
    <link rel="stylesheet" href="/css/CommonStyle.css" type="text/css" />
  </head>
  <body>
    <%- include('HeaderNavBar.ejs') -%>
    <br />
    <div class="container Santation font-size-14 h-100">
      <div class="row">
        <!-- breadcrumb -->
        <div class="col-6 col-sm-4">
          <nav aria-label="breadcrumb">
            <ol class="breadcrumb no-bg font-size-18">
              <li class="breadcrumb-item" aria-label="breadcrumb">
                <!-- might need to change link here -->
                <a class="grass" href="/home">Home</a>
              </li>
              <li class="breadcrumb-item active" aria-current="page">
                <!-- change breadcrumb here-->
                Dog
              </li>
            </ol>
          </nav>
        </div>

        <!-- sort -->
        <div class="col my-auto d-flex justify-content-end">
          <button
            class="btn p-2 rounded-pill bg-raspberry text-light m-1 font-size-14"
          >
            Sort by price
          </button>
          <button
            class="btn p-2 rounded-pill bg-raspberry text-light m-1 font-size-14"
          >
            Sort by age
          </button>
        </div>
      </div>

      <div class="row">
        <!-- products -->
        <!-- 9 products per page -->
        <!-- change picture, name and price -->
        <% for (let i = 0; i < allPets.length; ++i) { %>
        <div class="col">
          <div class="">
            <a
              href="/product/<%= allPets[i]._id %>"
              class="card no-border no-bg col badge badge-light width"
            >
              
              <img
                src="data:image/jpeg;base64,<%= new Buffer(allPets[i].images[1]).toString('base64')%>"
                class="card-img-top img-fluid w-100 rounded mx-auto d-block"
                alt="Responsive image"
              />
              <div class="card-body">
                <h5 class="card-text text-center font-weight-bolder">
                  <%= allPets[i].title %>
                </h5>
                <h6 class="card-text text-center">
                  <%= allPets[i].price %> VND
                </h6>
              </div>
            </a>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <div class="row justify-content-center">
      <!-- pages -->
      <nav aria-label="Page navigation example" class="col-8 col-md-9">
        <ul class="pagination justify-content-center">
          <li class="page-item">
            <a
              class="page-link m-1 border-grass rounded"
              href="#"
              aria-label="Previous"
            >
              <span class="grass" aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <li class="page-item">
            <a class="page-link m-1 border-grass rounded" href="#"><div class="grass">1</div></a>
          </li>
          <li class="page-item">
            <a class="page-link m-1 border-grass rounded" href="#"><div class="grass">2</div></a>
          </li>
          <li class="page-item">
            <a class="page-link m-1 border-grass rounded" href="#"><div class="grass">3</div></a>
          </li>
          <li class="page-item">
            <a
              class="page-link m-1 border-grass rounded"
              href="#"
              aria-label="Next"
            >
              <span class="grass" aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
    </div>

    <%- include('FooterNavBar.ejs') -%>

    <script
      src="https://kit.fontawesome.com/4327c3ebe1.js"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
  </body>
</html>
