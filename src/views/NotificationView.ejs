<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Notification</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
      integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2"
      crossorigin="anonymous"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script
      src="https://kit.fontawesome.com/4327c3ebe1.js"
      crossorigin="anonymous"
    ></script>
    <link rel="stylesheet" href="/css/colors.css" />
    <link rel="stylesheet" href="/css/Modal.css" />
    <link rel="stylesheet" href="/css/NotificationView.css" />
  </head>

  <body>
    <%- include('HeaderNavBar.ejs', {user, shop}) -%>

    <div class="container Santation">
      <nav aria-label="breadcrumb">
        <ol class="breadcrumb bg-white">
          <li class="breadcrumb-item"><a href="#">Home</a></li>
          <li class="breadcrumb-item active" aria-current="page">
            Notification
          </li>
        </ol>
      </nav>
    </div>
    <div class="container-md my-3 shadow p-3 mb-5 bg-white">
      <div class="row mt-3 mb-1">
        <div class="col">
          <h2 class="text-center">Messages</h2>
        </div>
      </div>
      <div class="row">
        <div class="col mt-2">
          <div class="messagersList">
            <ul class="messagersWrap">
              <% if (user != null) { %> <% for (let i = 0; i <
              user.notice.length; ++i) { %>
              <il class="messager">
                <hr class="mt-5 mb-5" />
                <div class="infoMessager">
                  <div class="messagerAndRemove">
                    <h5 class="info"><%= user.notice[i].detail %></h5>
                  </div>
                  <form
                    action="/user/<%= user._id %>/deleteNoti/<%= i %>?_method=PUT"
                    method="POST"
                  >
                    <button class="buttonRemove border-0 btn-lg" type="submit">
                      <i class="fa fa-trash" style="color: #7f867b"></i>
                    </button>
                  </form>
                </div>
                <hr class="mt-5 mb-5" />
              </il>
              <% } %> <% } %> <% if (shop != null) { %> <% for (let i = 0; i <
              shop.notice.length; ++i) { %>
              <il class="messager">
                <hr class="mt-5 mb-5" />
                <div
                  onclick="onItemClicked()"
                  type="button"
                  data-toggle="modal"
                  data-target="#myModal"
                  class="infoMessager"
                >
                  <div class="messagerAndRemove">
                    <h5 class="info"><%= shop.notice[i].detail %></h5>
                  </div>
                  <button
                    onclick="onItemRemoved(event)"
                    class="buttonRemove border-0 btn-lg"
                  >
                    <i class="fa fa-trash" style="color: #7f867b"></i>
                  </button>
                </div>
                <!-- Modal-->
                <div class="modal fade" id="myModal" role="dialog">
                  <div class="modal-dialog">
                    <!-- Modal content-->
                    <div class="modal-content">
                      <div
                        type="button"
                        class="closeButton"
                        data-dismiss="modal"
                        aria-label="Close"
                      >
                        <span aria-hidden="true">&times;</span>
                      </div>
                      <div class="card">
                        <div class="myModal-header">
                          <h3 class="text-center pt-3">Messages</h3>
                        </div>
                        <hr class="myModal-hr" />
                        <div class="myModal-body">
                          <h5>User ABC want to buy a pet.</h5>
                        </div>
                        <div class="myModal-footer">
                          <button
                            type="button"
                            class="sellButton btn-primary btn-lg"
                          >
                            Sell
                          </button>
                          <button
                            type="button"
                            class="rejectButton btn-primary btn-lg"
                          >
                            Reject
                          </button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <hr class="mt-5 mb-5" />
              </il>
              <% } %> <% } %>
            </ul>
          </div>
        </div>
      </div>
    </div>

    <%- include('FooterNavBar.ejs') -%>

    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
      crossorigin="anonymous"
    ></script>
    <script type="text/javascript">
      const onItemClicked = () => {
        click = document.querySelectorAll(".info");
        console.log(click);
      };
      const onItemRemoved = (event) => {
        remove = document.querySelectorAll(".infoMessager");
        console.log(remove);
        event.stopPropagation();
        remove[0].remove();
      };
    </script>
  </body>
</html>
